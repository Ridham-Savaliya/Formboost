{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#app": ["src/app.js"],
      "#config/*": ["src/config/*"],
      "#constants/*": ["src/constants/*"],
      "#database/*": ["src/database/*"],
      "#middlewares/*": ["src/middlewares/*"],
      "#modules/*": ["src/modules/*"],
      "#routes/*": ["src/routes/*"],
      "#service/*": ["src/service/*"],
      "#utils/*": ["src/utils/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext"
  },
  "include": ["src", "public"]
}
